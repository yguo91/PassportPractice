<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
        Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
      margin: 40px 32px;
    }
    h1 {
      font-size: 40px;
      margin-bottom: 8px;
    }
    .subtitle {
      font-size: 18px;
      margin-bottom: 24px;
    }
    .session-block {
      margin-bottom: 12px;
      line-height: 1.4;
    }
    .revoke-link {
      color: #0b63d1;
      text-decoration: none;
    }
    .revoke-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>Dashboard</h1>
  <p class="subtitle">Welcome <%= adminName || 'Admin' %></p>

  <p><strong>Current Active Sessions:</strong></p>

  <% if (!sessions || sessions.length === 0) { %>
    <p>No active sessions.</p>
  <% } else { %>
    <% sessions.forEach(function(session) { %>
      <div class="session-block">
        <div>SessionID: <%= session.sessionId %></div>
        <div>UserID: <%= session.userId %></div>
        <form method="POST" action="/admin/revoke-session" style="margin-top: 4px;">
          <input type="hidden" name="sessionId" value="<%= session.sessionId %>">
          <button type="submit" class="revoke-link">Revoke Session</button>
        </form>
      </div>
    <% }); %>
  <% } %>
</body>
</html>
